<?xml version="1.0" encoding="utf-8"?>
<MotionScene
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
            motion:constraintSetEnd="@+id/end"
            motion:constraintSetStart="@id/start"
            motion:duration="1500"
            motion:autoTransition="animateToEnd">
        <KeyFrameSet>
        </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint android:id="@+id/imageView" android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:scaleX="0" android:scaleY="0"/>
        <Constraint android:id="@+id/imageView2" android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:scaleX="1" android:scaleY="1"/>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint android:id="@+id/imageView" android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:scaleX="1" android:scaleY="1"/>
        <Constraint android:id="@+id/imageView2" android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:scaleX="0" android:scaleY="0"/>
    </ConstraintSet>
</MotionScene>